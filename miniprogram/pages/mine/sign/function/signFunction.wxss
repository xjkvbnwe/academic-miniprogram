/* pages/mine/sign/function/signFunction.wxss */
.text-sign {
  margin-top: 10%;
  text-align: center;
  font-size: x-large;
  font-weight: bolder;
}
.input-panel {
  display: flex;
  position: relative;
  text-align: center; 
  align-items: center;
  margin-top: 5%;
  justify-content: center;
}

.input {
  width: 80%;
  border: 3px solid rgb(6, 140, 250);
  display: block;
  text-align: center;
  background: rgb(251, 243, 243);
  height: 40px;
  border-radius: 15px;
  opacity: 0.8;
}

.button-panel {
	padding-top: 8%;
	padding-left: 3%;
	padding-right: 3%;
	padding-bottom: 5%;
	display: flex;
	text-align: center;
}

.button {
	padding-top: 15px;
	height: 30px;
	width: 100vw;
	color: white;
	background: rgb(4, 137, 245);
	border-radius: 5px;
}

.button-hover {
	background-color: rgb(59, 177, 245);
}